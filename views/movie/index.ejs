<%- include('../layouts/header') %>
<%- include('../layouts/navbar') %>
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h6 class="page-title">Movie</h6>
                    <ol class="breadcrumb m-0">
                       
                        <li class="breadcrumb-item"><a href="#">Movies</a></li>
                        <li class="breadcrumb-item active" aria-current="page">list</li>
                    </ol>
                </div>
                <div class="col-md-4">
                    <div class="float-end d-none d-md-block">
                        <div class="dropdown">
                            <a
                            href="/addMovie"
                            class="text-center btn btn-primary"
                            > <i class="ion ion-md-add"></i> Add Movie</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>S.NO.</th>
                                    <th>Movie Name</th>
                                    <th>Cast</th>
                                    <th>Genre</th>
                                    <th>Rating</th>
                                    <th>Release Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% movies.forEach((movie,index)=>{ %>
                                    <tr>
                                        <td><%= index+1 %></td>
                                        <td><%= movie.name %></td>
                                        <td><%= movie.cast %></td>
                                        <td><%= movie.genre %></td>
                                        <td><%= movie.rating %></td>
                                        <td><%= moment(movie.releaseDate).format('YYYY-MM-DD')%></td>
                                        <td> 
                                            <div class="d-inline"> 
                                                <a href="/editMovie/<%= movie.id %>" class="btn btn-primary">Edit</a>
                                                <a  href="/deleteMovie/<%= movie.id %>" class="btn btn-primary">Delete</a>
                                            </div>
                                       </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div> <!-- container-fluid -->
</div>
<!-- End Page-content -->



<%- req.toastr.render() %>

<%- include('../layouts/footer') %>